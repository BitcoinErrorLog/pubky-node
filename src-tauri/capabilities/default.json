{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        {
            "identifier": "shell:allow-execute",
            "allow": [
                {
                    "name": "binaries/pubky-node",
                    "sidecar": true,
                    "args": true
                },
                {
                    "name": "binaries/pkdns",
                    "sidecar": true,
                    "args": true
                }
            ]
        },
        "shell:allow-spawn",
        "shell:allow-stdin-write"
    ]
}